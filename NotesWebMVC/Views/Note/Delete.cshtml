@model Note

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text">Delete Note</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Priority"></label>
            <input asp-for="Priority" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Value"></label>
            <input asp-for="Value"  disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-controller="Note" asp-action="Index" class="btn btn-secondary" style:"150px">
            Back to List
        </a>
    </div>
</form>

